{
	"name": "B知乎",
	"version": "2.0",
	"manifest_version": 3,
	"description": " zzz",
	"icons": { 
		"16": "img/icon16.png",				
		"32": "img/icon32.png",		
		"48": "img/icon48.png",		
		"128": "img/icon128.png"	
	},
	"background": {
		"service_worker": "background.js"
	},
	"permissions": [ 
		"contextMenus",
		"unlimitedStorage",
		"tabs",
		"clipboardRead",
		"clipboardWrite",
		"storage"

	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "img/get_started16.png",
			"32": "img/get_started32.png",
			"48": "img/get_started48.png",
			"128": "img/get_started128.png"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"css": [],

			"js": [
				"content-script.js"
			]
		}
	]
}